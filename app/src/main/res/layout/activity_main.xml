<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Activity"
        android:onClick="myActivityClick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent Activity"
        android:onClick="intentActivityClick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autocomplete text"
        android:onClick="autoCompleteTextClick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tab bar"
        android:onClick="tabBarClick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Fragment"
        android:onClick="changeFragmentCLick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListDialog Demo"
        android:onClick="listDialogClick"
        android:layout_weight="2"/>

    <Button
    android:id="@+id/button7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Service"
    android:onClick="serviceClick"
    android:layout_weight="2"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boardcast"
        android:onClick="boardcaastClick"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content Provider"
        android:onClick="contentProviderClick"
        android:layout_weight="2"/>

</LinearLayout>